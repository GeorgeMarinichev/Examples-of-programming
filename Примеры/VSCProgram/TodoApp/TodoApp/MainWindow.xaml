<Window x:Class="TodoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoApp"
        mc:Ignorable="d"
        Title="TodoApp" Height="400" Width="800" Loaded="Window_Loaded">
    <Grid Margin="0,0,65,49">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="44*"/>
        </Grid.ColumnDefinitions>
        <!--<DataGrid x:Name="dgTodoList" FontSize="16" FontWeight="Bold" Margin="10" Grid.ColumnSpan="2">-->

        <DataGrid x:Name="dgTodoList" FontSize="16" FontWeight="Bold" Margin="10" Grid.ColumnSpan="2" AutoGenerateColumns="False">
            <DataGrid.Columns>

                <!--<DataGridTextColumn IsReadOnly="False" Header = "CreationDate" Width="160"/>-->
                <DataGridTextColumn Binding="{Binding Path = CreationDate}"  IsReadOnly="True" Header = "CreationDate" Width="160"/>
                <DataGridCheckBoxColumn Binding="{Binding Path = IsDone, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"  Header="Done" Width="60"/>
                <DataGridTextColumn Binding="{Binding Path = Text}" IsReadOnly="False"  Header="Todo" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
